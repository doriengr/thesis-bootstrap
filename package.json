{
  "name": "thesis-bootstrap",
  "version": "1.0.0",
  "description": "FLAVOUR EARTH - Veganes Café im Herzen Flensburgs",
  "main": "index.html",
  "author": "Dorien Grönwald",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doriengr/thesis-bootstrap"
  },
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --precision 6 src/scss -o build/",
    "css-lint": "stylelint src/scss/",
    "css-prefix": "postcss --replace build/styles.css --use autoprefixer",
    "css-purge": "purgecss --keyframes --css build/styles.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output build/",
    "css": "npm-run-all css-compile css-purge css-prefix",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css",
    "js-compress": "minify src/js/* > build/site.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.3",
    "bootstrap": "^5.1.0"
  },
  "devDependencies": {
    "minify": "^7.0.2",
    "autoprefixer": "^10.3.3",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.0.3",
    "serve": "^12.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-twbs-bootstrap": "^2.2.3"
  }
}